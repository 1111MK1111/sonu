{
  "name": "sonu-tests",
  "version": "1.0.0",
  "description": "Testing suite for SONU voice typing application",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:model-download": "jest tests/integration/model_download.test.js",
    "test:typing": "jest tests/integration/typing.test.js",
    "test:e2e": "jest tests/e2e",
    "test:electron": "jest tests/electron",
    "test:python": "python -m pytest tests/python",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:python && npm run test:e2e"
  },
  "devDependencies": {
    "@electron/remote": "^2.0.8",
    "@types/jest": "^29.5.0",
    "electron": "^28.0.0",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "playwright": "^1.40.0",
    "spectron": "^19.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.1.0",
    "path": "^0.12.7"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}